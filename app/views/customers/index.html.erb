<%- model_class = Customer -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human(:count => 2).titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:code) %></th>
      <th><%= model_class.human_attribute_name(:name1) %></th>
      <th><%= model_class.human_attribute_name(:name2) %></th>
      <th><%= model_class.human_attribute_name(:contactperson) %></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @customers.each do |customer| %>
      <tr>
        <td><%= link_to customer.code, edit_customer_path(customer) %></td>
        <td><%= customer.name1 %></td>
        <td><%= customer.name2 %></td>
        <td><%= customer.contactperson %></td>
        <td>
          <%= link_to ("<span class=\"glyphicon glyphicon-pencil\" ></span>").html_safe,
                      edit_customer_path(customer),
                      :class => 'btn btn-xs btn-info'%>
          <%= link_to ("<span class=\"glyphicon glyphicon-trash\" ></span>").html_safe,
                      customer_path(customer),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to ('<span class="glyphicon glyphicon-plus"></span>').html_safe + ' ' + t('.new', :default => t("helpers.links.new")),
            new_customer_path,
            :class => 'btn btn-default' %>
