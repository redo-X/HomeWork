<%= form_tag({:controller => "production_record_assistant", :action => "work_details_input"},
             :id => 'work_details_form', :method => "get", :class => "form-horizontal") do %>

    <div class="form-group">
      <%= hidden_field_tag :production_order, @production_order.id %>
      <%= hidden_field_tag :production_work_step, @production_work_step.id %>
    </div>

    <div class="form-group">
      <%= label_tag 'production_order_label', 'Produktionsauftrag', class: 'control-label col-lg-2' %>

      <div class="col-lg-10">
        <%= label_tag 'production_order_displayName', @production_order.display_name_with_article, class: 'control-label' %>
      </div>
    </div>

    <div class="form-group">
      <%= label_tag 'production_work_step_label', 'Arbeitsschritt', class: 'control-label col-lg-2' %>

      <div class="col-lg-10">
        <%= label_tag 'production_work_step_name', @production_work_step.name, class: 'control-label' %>
      </div>
    </div>


    <div class="form-group">
      <div class="btn-group col-lg-offset-2 col-lg-10">
        <%= submit_tag "Arbeit beginnen", :name => nil, class: 'btn btn-default pull-right' %>
      </div>
    </div>

<% end %>