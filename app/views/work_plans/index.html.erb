<%- model_class = WorkPlan -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:description) %></th>
      <th><%= model_class.human_attribute_name(:is_standard) %></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @work_plans.each do |work_plan| %>
      <tr>
        <td><%= link_to work_plan.name, work_plan_path(work_plan) %></td>
        <td><%= work_plan.description %></td>
        <td><%= work_plan.is_standard %></td>
        <td>
          <%= link_to ("<span class=\"glyphicon glyphicon-trash\" ></span>").html_safe,
                      work_plan_path(work_plan),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to ('<span class="glyphicon glyphicon-plus"></span>').html_safe + ' ' + t('.new', :default => t("helpers.links.new")),
            new_work_plan_path,
            :class => 'btn btn-default' %>

