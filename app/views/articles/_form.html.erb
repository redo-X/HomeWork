<%= form_for @article, :html => {:class => "form-horizontal article"} do |f| %>

    <% if @article.errors.any? %>
        <div id="error_expl" class="panel panel-danger">
          <div class="panel-heading">
            <h3 class="panel-title"><%= pluralize(@article.errors.count, "error") %> prohibited this article from being
              saved:</h3>
          </div>
          <div class="panel-body">
            <ul>
              <% @article.errors.full_messages.each do |msg| %>
                  <li><%= msg %></li>
              <% end %>
            </ul>
          </div>
        </div>
    <% end %>

    <div class="form-group">
      <%= f.label :code, :class => 'control-label col-lg-2' %>
      <div class="col-lg-10">
        <%= f.text_field :code, :class => 'form-control', :placeholder => 'Nummer' %>
      </div>
    </div>

    <div class="form-group">
      <%= f.label :name, :class => 'control-label col-lg-2' %>
      <div class="col-lg-10">
        <%= f.text_field :name, :class => 'form-control' %>
      </div>
    </div>
    <div class="form-group">
      <%= f.label :version, :class => 'control-label col-lg-2' %>
      <div class="col-lg-10">
        <%= f.text_field :version, :class => 'form-control' %>
      </div>
    </div>


    <div class="form-group">
      <%= f.label :article_group, :class => 'control-label col-lg-2' %>
      <div class="col-lg-10">
        <%= f.collection_select :article_group_id, ArticleGroup.all, :id, :display_name, {:prompt => true}, {:class => 'form-control'} %>
      </div>
    </div>



    <div class="btn-group col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>

      <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                  articles_path,
                  :method => :delete,
                  :data => {:confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?'))},
                  :class => 'btn btn-primary' %>

      <%= link_to t('.cancel', :default => t("helpers.links.cancel")), articles_path, :class => 'btn btn-primary' %>
    </div>

<% end %>
