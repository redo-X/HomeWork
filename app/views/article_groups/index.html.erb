<%- model_class = ArticleGroup -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:code) %></th>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @article_groups.each do |article_group| %>
      <tr>
        <td><%= article_group.code %></td>
        <td><%= article_group.name %></td>
        <td>
          <%= link_to ("<span class=\"glyphicon glyphicon-pencil\" ></span>").html_safe,
                      edit_article_group_path(article_group),
                      :class => 'btn btn-xs btn-info'%>
          <%= link_to ("<span class=\"glyphicon glyphicon-trash\" ></span>").html_safe,
                      article_group_path(article_group),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to ('<span class="glyphicon glyphicon-plus"></span>').html_safe + ' ' + t('.new', :default => t("helpers.links.new")),
            new_article_group_path,
            :class => 'btn btn-default',
            :id => 'buttonNew'%>
